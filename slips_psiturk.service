[Unit]
Description=Slips of Action psiturk/flask python app on port 8001

[Install]
# autostart on boot
WantedBy=default.target

[Service]
WorkingDirectory=/opt/ni_tools/tasks/slipstask/
Environment=PORT=22362
Environment=PYTHONPATH=/opt/ni_tools/python/userbase/
Environment=PYTHONUSERBASE=/opt/ni_tools/python/userbase/
ExecStart=/usr/bin/python3 /opt/ni_tools/tasks/slipstask/herokuapp.py
Restart=on-failure
